<h1>Articles</h1>
<%= form_with(url: articles_path, method: "GET") do |form| %>
  <%= form.label :query, "Search article ..." %>
  <%= form.text_field :query %>
  <%= form.submit "Search", name: nil %>
<% end %>
<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article %>
    </p>
  <% end %>
</div>

